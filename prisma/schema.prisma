generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  name         String?
  email        String   @unique
  password     String
  last_session DateTime @default(now())
  updated_at   DateTime @updatedAt
  date_born    DateTime

  playlist Playlist[]

  @@map("users")
}

model Song {
  id         Int      @id @default(autoincrement())
  name       String
  artist     String
  album      String
  year       Int
  genero     String
  duration   Int
  status     Boolean @default(false)
  updated_at DateTime @updatedAt

  playlist_songs Playlist_song[]

  @@map("songs")
}

model Playlist {
  id      Int    @id @default(autoincrement())
  name    String
  user    User   @relation(fields: [user_id], references: [id])
  user_id Int

  playlist_songs Playlist_song[]

  @@map("playlists")
}

model Playlist_song {
  id          Int      @id @default(autoincrement())
  playlist    Playlist @relation(fields: [playlist_id], references: [id])
  playlist_id Int
  songs       Song     @relation(fields: [song_id], references: [id])
  song_id     Int

  @@map("playlist_songs")
}
