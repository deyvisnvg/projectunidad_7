// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  name         String?
  email        String   @unique
  password     String
  last_session DateTime @default(now())
  updated_at   DateTime @updatedAt
  date_born    DateTime

  // playlist Playlist[]

  @@map("users")
}

model Song {
  id          Int     @id @default(autoincrement())
  name        String
  artist      String
  album       String
  year        Int 
  genero      String
  duration    Int
  updated_at  DateTime @updatedAt

  //playlists Playlist[]

  @@map("songs")
}